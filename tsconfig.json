{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "dom",
      "scripthost"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [ "src/**/*" ]
}
