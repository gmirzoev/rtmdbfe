{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2018",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [ "src/**/*" ]
}
